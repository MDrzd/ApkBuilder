<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_window_focused="false">
        <shape>
            <gradient
                android:startColor="#ff111111"
                android:endColor="#ff333333"
                android:angle="90.0" />
            <corners
                android:radius="5.0dip" />
            <stroke
                android:width="1.0dip"
                android:color="#ff808080" />
            <padding
                android:left="5.0dip"
                android:right="5.0dip" />
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#ff773300"
                android:endColor="#ffff9933"
                android:angle="90.0" />
            <corners
                android:radius="5.0dip" />
            <stroke
                android:width="1.0dip"
                android:color="#ff808080" />
            <padding
                android:left="5.0dip"
                android:right="5.0dip" />
        </shape>
    </item>
</selector>