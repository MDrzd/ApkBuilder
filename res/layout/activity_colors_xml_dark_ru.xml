<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/header_layout"
        android:background="@color/black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/lightblue"
            android:gravity="center"
            android:id="@id/filename"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:singleLine="true"
            android:layout_weight="1.0" />
    </LinearLayout>
    <ListView
        android:id="@id/color_list"
        android:focusable="false"
        android:fadingEdge="none"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_margin="4.0dip"
        android:listSelector="@drawable/list_selector_dark"
        android:cacheColorHint="@color/black"
        android:dividerHeight="10.0dip"
        android:layout_weight="1.0" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="4.0dip"
        android:layout_marginBottom="4.0dip">
        <Button
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/btn_save"
            android:background="@drawable/t1046_button"
            android:visibility="gone"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="2.0dip"
            android:text="@string/save"
            android:layout_weight="0.5" />
        <Button
            android:id="@id/btn_close"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:text="@string/close"
            style="@style/dark_button" />
        <Button
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/btn_openeditor"
            android:background="@drawable/t1046_button"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:text="@string/open_in_editor"
            android:layout_weight="0.5" />
    </LinearLayout>
</LinearLayout>