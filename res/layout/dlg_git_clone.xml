<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#ffffffff"
    android:paddingLeft="4.0dip"
    android:paddingRight="4.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="16.0sp"
        android:textColor="#ff33b5e5"
        android:id="@id/tv_title"
        android:background="#fff5f5f5"
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/git_clone" />
    <View
        android:id="@id/divider"
        android:background="#ff33b5e5"
        android:layout_width="fill_parent"
        android:layout_height="2.0dip" />
    <LinearLayout
        android:orientation="vertical"
        android:padding="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/lightblue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:text="@string/git_repository" />
        <TextView
            android:textSize="12.0sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/repository_comment" />
        <EditText
            android:textSize="14.0sp"
            android:id="@id/et_repository"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true" />
        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/lightblue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:text="@string/location" />
        <TextView
            android:textSize="12.0sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_comment" />
        <EditText
            android:textSize="14.0sp"
            android:id="@id/et_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true" />
        <Button
            android:id="@id/btn_browse"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dip"
            android:text="@string/three_dot"
            style="@style/button" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/bottom_layout"
        android:background="@color/littleblue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@id/btn_cancel"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:layout_marginTop="4.0dip"
            android:layout_marginBottom="4.0dip"
            android:text="@android:string/cancel"
            android:layout_weight="1.0"
            style="@style/button" />
        <Button
            android:id="@id/btn_ok"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="4.0dip"
            android:text="@android:string/ok"
            android:layout_weight="1.0"
            style="@style/button" />
    </LinearLayout>
</LinearLayout>