    <ImageView
        android:layout_gravity="center"
        android:id="@id/menu_icon"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip" />
    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/label_color_dark"
