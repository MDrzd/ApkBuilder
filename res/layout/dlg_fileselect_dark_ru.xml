<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/t1046_bg_z_dark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16.0sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@id/tv_title"
            android:padding="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_file_replace"
            android:layout_alignParentTop="true" />
        <TextView
            android:textSize="12.0sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@id/tv_subtitle"
            android:padding="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title" />
    </LinearLayout>
    <ListView
        android:id="@id/file_list"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_margin="4.0dip"
        android:listSelector="@drawable/list_selector_dark"
        android:cacheColorHint="#00000000"
        android:groupIndicator="@null"
        android:divider="@color/black"
        android:dividerHeight="4.0dip"
        android:layout_weight="1.0"
        android:layout_above="@id/bottom_divider"
        android:layout_below="@id/top_divider" />
    <CheckBox
        android:textSize="12.0sp"
        android:id="@id/cb_edit_before_replace"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/bottom_layout"
        android:paddingLeft="2.0dip"
        android:paddingRight="2.0dip"
        android:paddingBottom="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/close"
            android:background="@drawable/t1046_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="2.0dip"
            android:text="@android:string/cancel"
            android:layout_weight="1.0" />
        <Button
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/confirm"
            android:background="@drawable/t1046_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="2.0dip"
            android:text="@android:string/ok"
            android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>