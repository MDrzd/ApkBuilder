<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#ffffffff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="@color/littleblue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/lightblack"
            android:id="@id/dirPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <RelativeLayout
            android:id="@id/menu_switch_card"
            android:background="@drawable/selector_menu_light2"
            android:paddingTop="2.0dip"
            android:paddingBottom="2.0dip"
            android:layout_width="48.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@id/imageView_extsdcard"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:src="@drawable/extsdcard"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>
    <ListView
        android:id="@id/file_list"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:cacheColorHint="#00000000"
        android:divider="#ffcccfc4"
        android:dividerHeight="1.0px"
        android:layout_weight="1.0" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@id/keyword_edit"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="1.0" />
        <Button
            android:id="@id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="4.0dip"
            android:text="@string/search"
            style="@style/button" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/adViewLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>