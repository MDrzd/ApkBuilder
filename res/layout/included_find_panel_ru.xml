<?xml version="1.0" encoding="utf-8"?>
<SlidingDrawer
    android:layout_gravity="right"
    android:orientation="horizontal"
    android:id="@id/sliding_drawer"
    android:focusable="false"
    android:visibility="gone"
    android:layout_width="160.0dip"
    android:layout_height="fill_parent"
    android:layout_marginBottom="48.0dip"
    android:handle="@id/panel_button"
    android:content="@id/panel_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:gravity="center"
        android:id="@id/panel_button"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/edit_slide_left" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/panel_content"
        android:background="@color/black"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ViewAnimator
            android:id="@id/searchAnimator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@id/search_frame"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="4.0dip">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@id/input_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:id="@id/findEdit"
                        android:background="@drawable/t1046_edittext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40.0dip"
                        android:hint="@string/find"
                        android:singleLine="true"
                        android:selectAllOnFocus="true"
                        android:imeOptions="actionSearch|flagNoExtractUi"
                        android:textCursorDrawable="@null">
                        <requestFocus />
                    </EditText>
                    <EditText
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:id="@id/replaceEdit"
                        android:background="@drawable/t1046_edittext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.0dip"
                        android:minHeight="40.0dip"
                        android:hint="@string/replace"
                        android:maxLines="5"
                        android:selectAllOnFocus="true"
                        android:imeOptions="actionNone|flagNoExtractUi"
                        android:textCursorDrawable="@null" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@id/action_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:layout_marginTop="4.0dip"
                    android:layout_alignParentBottom="true">
                    <ImageButton
                        android:id="@id/findBtn"
                        android:background="@drawable/t1046_button"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="2.0dip"
                        android:src="@drawable/edit_search"
                        android:layout_weight="1.0"
                        android:contentDescription="@string/find" />
                    <ImageButton
                        android:id="@id/replaceBtn"
                        android:background="@drawable/t1046_button"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:src="@drawable/edit_replace"
                        android:layout_weight="1.0"
                        android:contentDescription="@string/replace" />
                    <ImageButton
                        android:id="@id/replaceAllBtn"
                        android:background="@drawable/t1046_button"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:src="@drawable/edit_replaceall"
                        android:layout_weight="1.0"
                        android:contentDescription="@string/replace_all" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="bottom|center"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:layout_above="@id/action_layout"
                        android:layout_below="@id/option_layout">
                        <EditText
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:id="@id/lineNumEdit"
                            android:background="@drawable/t1046_edittext"
                            android:padding="5.0dip"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:hint="@string/line_number"
                            android:singleLine="true"
                            android:selectAllOnFocus="true"
                            android:layout_weight="1.0"
                            android:inputType="number"
                            android:textCursorDrawable="@null" />
                        <ImageButton
                            android:id="@id/goBtn"
                            android:background="@drawable/t1046_button"
                            android:layout_width="40.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="4.0dip"
                            android:src="@drawable/edit_go"
                            android:contentDescription="@string/go" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"
                        android:id="@id/option_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:layout_marginTop="4.0dip"
                        android:layout_below="@id/input_layout">
                        <ToggleButton
                            android:textSize="14.0sp"
                            android:textStyle="bold"
                            android:textColor="#ffffffff"
                            android:id="@id/checkBoxRegexp"
                            android:background="@drawable/t1046_button"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="2.0dip"
                            android:textOn="ON"
                            android:textOff="OFF"
                            android:drawableTop="@drawable/edit_regexp"
                            android:layout_weight="1.0"
                            android:contentDescription="@string/regexp" />
                        <ToggleButton
                            android:textSize="14.0sp"
                            android:textStyle="bold"
                            android:textColor="#ffffffff"
                            android:id="@id/checkBoxIgnoreCase"
                            android:background="@drawable/t1046_button"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="2.0dip"
                            android:textOn="ON"
                            android:textOff="OFF"
                            android:drawableTop="@drawable/edit_ignorecase"
                            android:layout_weight="1.0"
                            android:contentDescription="@string/case_insensitive" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ViewAnimator>
    </LinearLayout>
</SlidingDrawer>