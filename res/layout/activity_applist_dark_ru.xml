<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@id/header_layout"
        android:background="@color/black"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@id/apptype"
            android:background="@color/black"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:singleLine="true"
            android:layout_weight="1.0" />
        <RelativeLayout
            android:id="@id/menu_more"
            android:background="@drawable/selector_menu_dark2"
            android:paddingTop="6.0dip"
            android:paddingBottom="6.0dip"
            android:layout_width="48.0dip"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:src="@drawable/more_white"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">
        <ListView
            android:id="@id/application_list"
            android:background="@color/black"
            android:fadingEdge="none"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="4.0dip"
            android:listSelector="@drawable/list_selector_dark"
            android:cacheColorHint="#00000000"
            android:divider="@color/black"
            android:dividerHeight="4.0dip"
            android:layout_weight="1.0" />
        <ProgressBar
            android:layout_gravity="center"
            android:id="@id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:progressBarStyleLarge" />
    </FrameLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@id/footer_layout"
        android:background="@color/black"
        android:padding="4.0dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip">
        <EditText
            android:enabled="false"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:layout_gravity="bottom"
            android:id="@id/et_keyword"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:hint="@string/keyword_hint"
            android:singleLine="true"
            android:layout_weight="1.0" />
        <Button
            android:enabled="false"
            android:id="@id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginBottom="0.8000001dip"
            android:text="@string/find"
            style="@style/dark_button" />
        <Button
            android:id="@id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginBottom="0.8000001dip"
            android:text="@string/close"
            style="@style/dark_button" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/adViewLayout"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip" />
</LinearLayout>